<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_seed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:paddingHorizontal="16dp"
            android:textSize="20sp"
            tools:text="Seed Name: xxx" />

        <TextView
            android:id="@+id/tv_seed_phrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:paddingHorizontal="16dp"
            android:textSize="18sp"
            tools:text="Seed Phrase:" />

        <TextView
            android:id="@+id/tv_phrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            tools:text="second chase" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_phrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="please enter the phrase"
            android:padding="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_phrase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cg_seed_phrase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:singleLine="true"
                app:singleSelection="true" />
        </HorizontalScrollView>

        <CheckBox
            android:id="@+id/cb_create_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:checked="true"
            android:text="Create root keys" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:enabled="false"
            android:text="Next"
            android:textAllCaps="false" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>