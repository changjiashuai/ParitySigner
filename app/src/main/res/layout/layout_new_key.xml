<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.keys.NewSeedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:text="Create New Key"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:paddingHorizontal="16dp"
            android:textStyle="italic"
            tools:text="For seed ${0}" />

        <TextView
            android:id="@+id/tv_network_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            app:drawableStartCompat="@drawable/ic_home_black_24dp"
            tools:text="network title" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="//network/path"
            android:padding="16dp"
            app:prefixText="seed name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_key_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:enabled="false"
            android:text="Next"
            android:textAllCaps="false" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>