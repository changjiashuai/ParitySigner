<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    app:startDestination="@+id/settingsScreen">

    <fragment
        android:id="@+id/settingsScreen"
        android:name="com.changjiashuai.paritysigner.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">

        <action
            android:id="@+id/action_settings_to_networks"
            app:destination="@id/networks"
            app:popUpTo="@id/settingsScreen" />

        <action
            android:id="@+id/action_settings_to_backup_seed"
            app:destination="@id/backupSeed"
            app:popUpTo="@id/settingsScreen" />
        <action
            android:id="@+id/action_settings_to_verifier_certificate"
            app:destination="@id/verifierCertificate"
            app:popUpTo="@id/settingsScreen" />
    </fragment>

    <fragment
        android:id="@+id/verifierCertificate"
        android:name="com.changjiashuai.paritysigner.ui.settings.VerifierDetailsFragment"
        android:label="Verifier Details"
        tools:layout="@layout/fragment_verifier_details">

    </fragment>

    <fragment
        android:id="@+id/backupSeed"
        android:name="com.changjiashuai.paritysigner.ui.settings.BackupSeedFragment"
        android:label="Backup Seed"
        tools:layout="@layout/fragment_backup_seed">

    </fragment>
    <fragment
        android:id="@+id/networks"
        android:name="com.changjiashuai.paritysigner.ui.settings.ManageNetworksFragment"
        android:label="Manage Networks"
        tools:layout="@layout/fragment_manage_networks">

        <action
            android:id="@+id/action_network_to_details"
            app:destination="@id/networkDetails"
            app:popUpTo="@id/networks" />
        <action
            android:id="@+id/action_network_to_sign_sufficient_crypto"
            app:destination="@id/signSufficientCrypto"
            app:popUpTo="@id/networks" />
    </fragment>

    <fragment
        android:id="@+id/networkDetails"
        android:name="com.changjiashuai.paritysigner.ui.settings.NetworkDetailsFragment"
        android:label="Network Details"
        tools:layout="@layout/fragment_network_details">

        <action
            android:id="@+id/action_networkDetails_to_sign_sufficient_crypto"
            app:destination="@id/signSufficientCrypto"
            app:popUpTo="@id/networkDetails" />
        <argument
            android:name="key"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/signSufficientCrypto"
        android:name="com.changjiashuai.paritysigner.ui.settings.SignSufficientCryptoFragment"
        android:label="Sign SufficientCrypto"
        tools:layout="@layout/fragment_sign_sufficient_crypto">

        <argument
            android:name="action"
            app:argType="integer" />
    </fragment>
</navigation>
