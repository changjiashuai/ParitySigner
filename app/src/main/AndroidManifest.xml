<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.changjiashuai.paritysigner">

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".App"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ParitySigner"
        tools:targetApi="31">
        <activity
            android:name=".ui.keys.NewDeriveKeyActivity"
            android:exported="false" />
        <activity
            android:name=".ui.scan.TransactionPreviewActivity"
            android:exported="false" />
        <activity
            android:name=".ui.settings.VerifierDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.settings.BackupSeedActivity"
            android:exported="false" />
        <activity
            android:name=".ui.settings.SignatureActivity"
            android:exported="false" />
        <activity
            android:name=".ui.settings.SignSufficientCryptoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.settings.NetworkDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.settings.AboutActivity"
            android:exported="false" />
        <activity
            android:name=".ui.settings.ManageNetworksActivity"
            android:exported="false" />
        <activity
            android:name=".ui.HomeActivity"
            android:exported="false"
            android:label="@string/title_activity_home" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.ParitySigner">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>